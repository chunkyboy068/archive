<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/yCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/xCoords"
        android:layout_below="@+id/xCoords"
        android:text="y goes here" />

    <TextView
        android:id="@+id/zCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yCoords"
        android:layout_below="@+id/yCoords"
        android:text="z goes here" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xCoords"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/xCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_centerVertical="true"
        android:text="x goes here" />

</RelativeLayout>
